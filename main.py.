import asyncio
from aiogram import Bot, Dispatcher, types
from aiogram.filters import Command

# --- CONFIGURACIÃ“N ---
# Sustituye las comillas por el Token que te dio BotFather
TOKEN_TELEGRAM = 'TU_TOKEN_AQUI' 

bot = Bot(token=TOKEN_TELEGRAM)
dp = Dispatcher()

# Saludo inicial en espaÃ±ol
@dp.message(Command("start"))
async def bienvenido(message: types.Message):
    await message.answer(f"Â¡Hola {message.from_user.first_name}! ðŸ‘‹\nSoy tu bot de ofertas. Â¡Ya estoy conectado y hablo espaÃ±ol!")

# Detector de enlaces
@dp.message()
async def capturar(message: types.Message):
    if "amazon" in message.text.lower():
        await message.answer("âœ… Enlace de Amazon detectado. Â¡Buen trabajo!")
    else:
        await message.answer("Recibido. PÃ¡same un link de Amazon para probar.")

async def main():
    print("ðŸš€ BOT ENCENDIDO Y EN ESPAÃ‘OL...")
    await dp.start_polling(bot)

if __name__ == "__main__":
    asyncio.run(main())
